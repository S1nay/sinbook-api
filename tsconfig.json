{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "baseUrl": "src",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noErrorTruncation": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "#adapters/*": ["adapters/*"],
      "#auth/*": ["auth/*"],
      "#comment/*": ["comment/*"],
      "#core/*": ["core/*"],
      "#post/*": ["post/*"],
      "#prisma/*": ["prisma/*"],
      "#user/*": ["user/*"],
      "#utils/*": ["utils/*"],
      "#file/*": ["file/*"],
      "#follows/*": ["follows/*"],
      "#conversation/*": ["conversation/*"],
      "#message/*": ["message/*"],
      "#openapi/*": ["openapi/*"],
    }
  }
}
